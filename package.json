  "bugs": {
    "url": "https://github.com/raphaabreu/promise-collector/issues"
  },
  "homepage": "https://github.com/raphaabreu/promise-collector#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": ">=4.3.0 <5.0.0-0"
  }
