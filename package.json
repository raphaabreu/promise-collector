{
  "name": "@raphaabreu/promise-collector",
  "version": "1.0.0",
  "description": "Promise Collector is a utility class for managing and tracking a collection of promises",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest",
    "build": "npm run clean && tsc",
